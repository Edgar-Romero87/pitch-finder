
      <form action="/new/event" method="POST">
       <label>Dropdown</label>
        <select name="location">
          <% locArr.forEach(obj => { %>
            <option value="<%= obj.name %>"><%= obj.name %></option>
          <% }) %>
        </select>
        <select id="skill" name="skill_level">
          <option value="rookie">Rookie</option>
          <option value="moderate">Moderate</option>
          <option value="pro">Pro/MLS</option>
        </select>
          <label>Time
            <input type="time" name="time" required>
          </label>
          <label>When
            <input type="date" name="date" required>

          </label>
          <label>How many players do you need
            <input type="number" name="players_wanted" required>

          </label>
          <label>Please leave a short description
            <textarea name="description" cols="30" rows="5" required></textarea>
          </label>
          <button type="submit">Create Game</button>
      </form>
  