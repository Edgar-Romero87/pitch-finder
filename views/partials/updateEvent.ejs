<form action="/event/update/<%= event.id %>?_method=put" method="POST">
    <label>Update time:
        <input name="time" type="date" value="<%= event.date %>">
    </label>
    <label>Update date:
        <input name="date" type="time" value="<%= event.time %>">
    </label>
    <label>Update descroption
        <textarea name="description" cols="30" rows="5" type="text"><%= event.description %></textarea>
    </label>
    <label>Update how many players are needed:
        <input name="players_wanted" type="number" value="<%= event.players_wanted %>">
    </label>
    <button>Update Event</button>
</form>